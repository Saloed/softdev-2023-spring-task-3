<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemViewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvVP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/montserrat"
        android:text="Продукты"
        android:textColor="#1E1E1E"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/rCProducts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeletePerson" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rCProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDeleteAll"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVP1" />

    <TextView
        android:id="@+id/tvVP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Кол-во"
        android:textColor="#1E1E1E"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/rCProducts"
        app:layout_constraintEnd_toStartOf="@+id/tvVP3"
        app:layout_constraintTop_toBottomOf="@+id/btnAddPerson" />

    <TextView
        android:id="@+id/tvVP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Цена"
        android:textColor="#1E1E1E"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/rCProducts"
        app:layout_constraintEnd_toStartOf="@+id/tvVP4"
        app:layout_constraintTop_toBottomOf="@+id/btnAddPerson" />

    <TextView
        android:id="@+id/tvVP4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat"
        android:text="Купил"
        android:textColor="#1E1E1E"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/rCProducts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddPerson" />


    <Button
        android:id="@+id/btnAddPerson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Добавить человека"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnDeletePerson"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAllPeople"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Кто скидывается в общее?"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/btnAddPerson"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeletePerson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Удалить человека"
        app:layout_constraintEnd_toStartOf="@+id/btnAddPerson"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddProduct"
        style="@style/ToggleButtonWithIconOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="65dp"
        app:icon="@drawable/round_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnDeleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="60dp"
        android:text="Удалить всё"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddProduct"
        app:layout_constraintStart_toEndOf="@+id/btnProductsInfo" />

    <Button
        android:id="@+id/btnProductsInfo"
        style="@style/ToggleButtonWithIconOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="65dp"
        app:icon="@drawable/baseline_info_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>