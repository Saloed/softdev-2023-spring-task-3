    <style name="ToggleButtonWithIconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:minWidth">44dp</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/new_colorSecondary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SubTitleStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/new_colorSubSecondary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DarkBgTitleStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>