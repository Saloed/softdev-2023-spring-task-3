<resources>

    <style name="Theme.Dacha" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/new_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/new_colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/new_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/new_colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/new_status_bar</item>
        <!-- Customize your theme here. -->
